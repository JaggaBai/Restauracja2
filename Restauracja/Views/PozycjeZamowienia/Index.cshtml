@model IEnumerable<PozycjaZamowienia>
@{
    ViewData["Title"] = "Lista dań";
}

<div class="row">
    <div class=" col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nazwa)</th>
                    <th>@Html.DisplayNameFor(model => model.KategoriaPozycji)</th>
                    <th>@Html.DisplayNameFor(model => model.Cena)</th>
                    <th>Wprowadź zmiany</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Nazwa)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.KategoriaPozycji)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Cena)</td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edytuj</a>
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Usuń</a>
                    </td>
                </tr>

                }
            </tbody>

        </table>

    </div>

</div>
